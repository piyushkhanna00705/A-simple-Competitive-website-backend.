<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="p_id" id="p_id" placeholder="Problem ID" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="tags" id="tags" placeholder="Tags" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="diff_level" id="diff_level" placeholder="Difficulty Level" required>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary float-right">Add Problem</button>
        </form>
    </div>
</div>
</body>
</html>